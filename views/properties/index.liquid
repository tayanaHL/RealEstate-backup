{% layout 'layout.liquid' %}
{% block content %}
    <!-- we need to account for two conditions here -->
    <!-- first, if we have fruits in our array -->
    <!-- second, if there are no fruits in the array -->
    {% if properties.length > 0 %}
        <div class="container-md">
            <h2>All Properties</h2>
            <div class="row">
                {% for property in properties %}
                    <div class="card me-3 mb-3" style="width: 18rem;">
                        <h5 class="card-header">{{property.location}}</h5>
                        <div class="card-body">
                            <h5 class="card-title">
                                {% if property.forSale %}
                                  For Sale
                                {% else %}
                                    For Rent
                                {% endif %}
                            </h5>
                            <p class="card-text">View Property</p> 
                            <img src="{{property.images}}" width="230px" in {{property.description}}>
                           
                            <div class="card-text mb-2" {{property.price}}></div>
                            <a href="/properties/{{property.id}}" class="btn btn-info">View {{property.location}}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <div class="container-md">
            <h2>No properties yet... Go add some!</h2>
        </div>
        <div class="bg"></div>
        <div class="bg bg2"></div>
        <div class="bg bg3"></div>
      
      
    {% endif %}
{% endblock %}